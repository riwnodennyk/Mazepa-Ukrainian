<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/background_gray</item>
    </style>

    <style name="PhraseCard.Text" parent="@android:attr/textAppearanceMedium">
        <item name="android:textSize">17sp</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="LearnWord" parent="PhraseCard.Text">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UserWord" parent="PhraseCard.Text">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LearnPhrase" parent="PhraseCard.Text">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="UserPhrase" parent="PhraseCard.Text">
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>