<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@android:color/transparent" android:state_enabled="false" android:state_focused="true" android:state_pressed="true"></item>
    <item android:drawable="@android:color/transparent" android:state_enabled="false" android:state_focused="true"></item>

    <!-- Pressed State -->
    <item android:state_focused="true" android:state_pressed="true"><shape>
            <solid android:drawable="@color/bg_blue" />
        </shape></item>
    <item android:state_focused="false" android:state_pressed="true"><shape>
            <solid android:color="@color/bg_blue" />
        </shape></item>

    <!-- Normal State -->
    <item android:drawable="@android:color/transparent"></item>

</selector>